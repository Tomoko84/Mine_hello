<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.IAPTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="WalletFragmentDefaultDetailsTextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/wallet_secondary_text_holo_dark</item>
        <item name="android:textColorHighlight">@color/wallet_highlighted_text_holo_dark</item>
        <item name="android:textColorHint">@color/wallet_hint_foreground_holo_dark</item>
        <item name="android:textColorLink">@color/wallet_holo_blue_light</item>
    </style>
    <style name="WalletFragmentDefaultDetailsHeaderTextAppearance" parent="@style/WalletFragmentDefaultDetailsTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="WalletFragmentDefaultButtonTextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/wallet_primary_text_holo_light</item>
        <item name="android:textColorHighlight">@color/wallet_highlighted_text_holo_light</item>
        <item name="android:textColorHint">@color/wallet_hint_foreground_holo_light</item>
        <item name="android:textColorLink">@color/wallet_link_text_light</item>
    </style>
    <style name="WalletFragmentDefaultStyle">
        <item name="buyButtonHeight">48.0dip</item>
        <item name="buyButtonWidth">match_parent</item>
        <item name="buyButtonText">buy_with_google</item>
        <item name="buyButtonAppearance">classic</item>
        <item name="maskedWalletDetailsTextAppearance">@style/WalletFragmentDefaultDetailsTextAppearance</item>
        <item name="maskedWalletDetailsHeaderTextAppearance">@style/WalletFragmentDefaultDetailsHeaderTextAppearance</item>
        <item name="maskedWalletDetailsBackground">@color/wallet_bright_foreground_holo_light</item>
        <item name="maskedWalletDetailsButtonTextAppearance">@style/WalletFragmentDefaultButtonTextAppearance</item>
        <item name="maskedWalletDetailsButtonBackground">@android:drawable/btn_default</item>
        <item name="maskedWalletDetailsLogoTextColor">@color/wallet_bright_foreground_holo_dark</item>
        <item name="maskedWalletDetailsLogoImageType">classic</item>
    </style>
    <style name="SomcCameraTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textViewStyle">@style/SstTextViewStyle</item>
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/default_text_col</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:alertDialogTheme">@style/Theme.SomcCamera.AlertDialog</item>
        <item name="android:buttonBarStyle">@android:style/Holo.ButtonBar</item>
        <item name="android:buttonBarButtonStyle">?android:borderlessButtonStyle</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="SomcCameraHoloTheme" parent="@style/SomcCameraTheme">
        <item name="android:alertDialogTheme">@style/Theme.Holo.SomcCamera.AlertDialog</item>
    </style>
    <style name="SstTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sst</item>
    </style>
    <style name="Theme.SomcCamera.AlertDialog" parent="@android:style/Theme.DeviceDefault.Dialog.MinWidth">
        <item name="android:textAppearanceMedium">@style/TextAppearance.SomcCamera.Dialog.Medium</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.SomcCamera.Dialog.Title</item>
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="Theme.Holo.SomcCamera.AlertDialog" parent="@style/Theme.SomcCamera.AlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="TextAppearance.SomcCamera.Dialog.Title" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textSize">22.0sp</item>
    </style>
    <style name="TextAppearance.SomcCamera.Dialog.Medium" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">18.0sp</item>
    </style>
    <style name="TextAppearance.SomcCamera.BallonTipsStyleSmall" parent="@style/BallonTipsStyle">
        <item name="android:textSize">12.0dip</item>
    </style>
    <style name="TextAppearance.SomcCamera.BallonTipsStyleMedium" parent="@style/BallonTipsStyle">
        <item name="android:textSize">14.0dip</item>
    </style>
    <style name="TextAppearance.SomcCamera.BallonTipsStyleLarge" parent="@style/BallonTipsStyle">
        <item name="android:textSize">16.0dip</item>
    </style>
    <style name="TextAppearance.SomcCamera.Small" parent="@style/OnScreenTextDropShadow">
        <item name="android:textSize">12.0dip</item>
    </style>
    <style name="TextAppearance.SomcCamera.Medium" parent="@style/OnScreenTextDropShadow">
        <item name="android:textSize">14.0dip</item>
    </style>
    <style name="TextAppearance.SomcCamera.Large" parent="@style/OnScreenTextDropShadow">
        <item name="android:textSize">16.0dip</item>
    </style>
    <style name="WindowAnimationDeviceDefaultDialogLandscape">
        <item name="android:windowEnterAnimation">@animator/somc_dialog_popup_enter</item>
        <item name="android:windowExitAnimation">@animator/somc_dialog_popup_exit_landscape</item>
    </style>
    <style name="WindowAnimationDeviceDefaultDialogPortrait">
        <item name="android:windowEnterAnimation">@animator/somc_dialog_popup_enter</item>
        <item name="android:windowExitAnimation">@animator/somc_dialog_popup_exit_portrait</item>
    </style>
    <style name="BallonTipsStyle">
        <item name="android:shadowColor">#aa000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="OnScreenTextDropShadow">
        <item name="android:shadowColor">#aa000000</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">0.1</item>
    </style>
</resources>
